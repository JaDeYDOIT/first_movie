<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- point.xml -->

<mapper namespace="point">
	<select id="getMemberTotalPoint" parameterType="String"
		resultType="int">
		SELECT SUM(point_history) AS total_point
		FROM point
		WHERE
		member_id = #{memberID}
		GROUP BY
		member_id;
	</select>
</mapper>